<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/parkingText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UMKC.PARKING"
                android:textColor="@color/black"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="72sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/parkcar"
                android:layout_width="180sp"
                android:layout_height="180sp"
                android:layout_marginTop="48sp"
                android:layout_gravity="center"
                android:src="@drawable/parkcar"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/parkingText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UMKC"
                android:textAlignment="center"
                android:textColor="#081D93"
                android:textSize="36sp"
                android:textStyle="italic"
                android:layout_marginTop="54sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/parkingText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOCAL PARKING SYSTEM "
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                android:textStyle="italic"
                android:layout_marginTop="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="36sp"
                android:orientation="horizontal">

            <Button
                android:id="@+id/letsBeginButton"
                android:layout_width="218sp"
                android:layout_height="72sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#3F51B5"
                android:text="Lets Begin" />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>